<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PinRecoveryServlet</servlet-name>
        <servlet-class>servlets.PinRecoveryServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CompletePinRecoveryServlet</servlet-name>
        <servlet-class>servlets.CompletePinRecoveryServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistrationServlet</servlet-name>
        <servlet-class>servlets.RegistrationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AlertServlet</servlet-name>
        <servlet-class>servlets.AlertServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ActivationServlet</servlet-name>
        <servlet-class>servlets.ActivationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PinRecoveryServlet</servlet-name>
        <url-pattern>/PinRecoveryServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CompletePinRecoveryServlet</servlet-name>
        <url-pattern>/CompletePinRecoveryServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistrationServlet</servlet-name>
        <url-pattern>/RegistrationServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AlertServlet</servlet-name>
        <url-pattern>/AlertServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ActivationServlet</servlet-name>
        <url-pattern>/ActivationServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
