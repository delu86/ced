<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>JsonQueryResolver</servlet-name>
        <servlet-class>servlet.JsonQueryResolver</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>chart</servlet-name>
        <servlet-class>servlet.ChartServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CommandServlet</servlet-name>
        <servlet-class>servlet.CommandServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginControlServlet</servlet-name>
        <servlet-class>servlet.LoginControlServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PasswordRecoveryServlet</servlet-name>
        <servlet-class>servlet.PasswordRecoveryServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NewPasswordServlet</servlet-name>
        <servlet-class>servlet.NewPasswordServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ActivationAccountServlet</servlet-name>
        <servlet-class>servlet.ActivationAccountServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ExporterServlet</servlet-name>
        <servlet-class>servlet.ExporterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>JsonQueryResolver</servlet-name>
        <url-pattern>/queryResolver</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>chart</servlet-name>
        <url-pattern>/chart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CommandServlet</servlet-name>
        <url-pattern>/pages/command</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginControlServlet</servlet-name>
        <url-pattern>/pages/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PasswordRecoveryServlet</servlet-name>
        <url-pattern>/pages/passwordRecovery</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NewPasswordServlet</servlet-name>
        <url-pattern>/pages/newPassword</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ActivationAccountServlet</servlet-name>
        <url-pattern>/page/activation</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ExporterServlet</servlet-name>
        <url-pattern>/exporterServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>cedDB</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>epvDB</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
</web-app>
